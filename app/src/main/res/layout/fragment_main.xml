<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:background="#B3E5FC"
              tools:context=".MainActivityFragment">

    <TextView
        android:text="Armin's Nanodegree Apps!"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="SPOTIFY STREAMER"
        android:textColor="@android:color/white"
        android:background="#01579B"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpotifyStreamer"
        android:onClick="onClickBtnSpotifyStreamer"/>

    <Button
        android:text="SCORES APP"
        android:textColor="@android:color/white"
        android:background="#01579B"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFootballScoresApp"
        android:onClick="onClickBtnFootballScoresApp"/>

    <Button
        android:text="LIBRARY APP"
        android:textColor="@android:color/white"
        android:background="#01579B"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLibraryApp"
        android:onClick="onClickBtnLibraryApp"/>

    <Button
        android:text="BUILD IT BIGGER"
        android:textColor="@android:color/white"
        android:background="#01579B"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuildItBigger"
        android:onClick="onClickBtnBuildItBigger"/>

    <Button
        android:text="XYZ READER"
        android:textColor="@android:color/white"
        android:background="#01579B"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnXyzReader"
        android:onClick="onClickBtnXyzReader"/>

    <Button
        android:text="CAPSTONE"
        android:textColor="@android:color/white"
        android:background="#1A237E"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapstone"
        android:onClick="onClickBtnCapstone"/>

</LinearLayout>
